<div class="card product-card col-6 col-xl-2 col-lg-3 col-md-4 col-sm-4 m-2 p-0" id="product-{{product.id}}">

	<div class="product-card-thumbnail py-4">
		<a href="{{ path('product_show', {'id': product.id})}}">
			<img src="{{ vich_uploader_asset(product, 'imgFile') }}" class="img-fluid product-card-img" alt="img" class=" px-3 pt-2">
		</a>
	</div>
	<div class="beer-content px-3">
		<h5 class="beer-name">
			<a href="{{ path('product_show', {'id': product.id})}}">{{ product.title}}</a>
		</h5>
	</div>
</div>
