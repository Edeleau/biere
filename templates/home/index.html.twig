{% extends 'base.html.twig' %}

{% block title %}Acceuil
{% endblock %}

{% block body %}
	<div class="row justify-content-center px-5" id="home">
		<div class="col-12 col-md-8 h-100 h-md-75 p-0">
			<div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
				<div class="carousel-indicators">
					<button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
					<button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
				</div>
				<div class="carousel-inner">
					<div class="carousel-item active">
						<a href="{{ path('product', {'classification': 'goodies'}) }}?category=glass">
							<img src="{{ asset('build/images/carousselGlass.jpg') }}" class="d-block w-100" alt="Verre à bière">
							<div class="carousel-caption d-none d-md-block">
								<h5>Nos verres</h5>
								<p>Retrouvez ici notre gamme de verres à bières.</p>
							</div>
						</a>
					</div>
					<div class="carousel-item">
						<a href="{{ path('bestSeller') }}">
							<img src="{{ asset('build/images/carousselBeer.jpg') }}?category=glass" class="d-block w-100" alt="Meilleures bières">
							<div class="carousel-caption d-none d-md-block">
								<h5>Nos meilleures ventes</h5>
								<p>Découvrez ici nos meilleures ventes.</p>
							</div>
						</a>
					</div>
				</div>
				<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="visually-hidden">Previous</span>
				</button>
				<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="visually-hidden">Next</span>
				</button>
			</div>
		</div>
		<div class="col-12 col-md-8 row justify-content-md-between justify-content-center text-center mt-5 px-md-5 px-0 py-3 box-preview">
			<h2>Nos dernières arrivées</h2>
			{% include "home/_product-cards.html.twig" with {products:lastProducts} only %}
		</div>
		<div class="col-12 col-md-8 row justify-content-md-between justify-content-center text-center mt-5 px-md-5 px-0 py-3 box-preview">
			<h2>Nos produits populaires</h2>
			{% include "home/_product-cards.html.twig" with {products:popProducts} only %}
		</div>
		<div class="row col-12 justify-content-center my-5">
			<div class="col-10 col-sm-4 col-md-3 position-relative">
				<a href="{{ path('product', {'classification': 'beer'}) }}">
					<img src="{{ asset('build/images/homeBeer.jpg') }}" alt="Bières" class="w-100">
					<p class="text">Bières</p>
				</a>
			</div>
			<div class="col-10 col-sm-4 col-md-3 position-relative mt-3 mt-sm-0">
				<a href="{{ path('product', {'classification': 'goodies'}) }}?category=glass">
					<img src="{{ asset('build/images/homeGlass.jpg') }}" alt="Goodies" class="w-100">
					<p class="text">Verres</p>
				</a>
			</div>
		</div>

	</div>
{% endblock %}
