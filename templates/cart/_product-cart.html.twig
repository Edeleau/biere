<div class="col-12 py-2">
	<div class="row">
		<div class="col-2 d-none d-lg-block py-4  align-self-center">
			<img src="{{ vich_uploader_asset(product.product, 'imgFile') }}" class="img-fluid" alt="{{product.product.title}}" class=" px-3 pt-2">
		</div>
        <div class="col-lg-4 col-7 align-self-center text-left">
			<p class="price mb-0">{{product.product.price}} &euro;</p>
			
            <h4 class='font-weight-bold'><a href="{{ path('product_show', {'id': product.product.id})}}">{{product.product.title}}</a></h4>
			<p>{{product.product.brand}}</p>
        </div>
		<div class="col-4  align-self-center text-right">
			<a href="{{ path('updatePanier', {'id': product.product.id, 'action': 'plus'})}}"><i class="fas fa-plus"></i></a>
			<span class="mx-3">{{product.quantite}}</span>
			<a href="{{ path('updatePanier', {'id': product.product.id, 'action': 'minus'})}}"><i class="fas fa-minus"></i></a>
		</div>
		<div class="col-1 col-lg-2 text-right mt-5">
			<a href="{{ path('updatePanier', {'id': product.product.id, 'action': 'unset'})}}"><i class="fas fa-times cross"></i></a>
		</div>
	</div>

</div>
