{% extends 'base.html.twig' %}

{% block title %}CGV
{% endblock %}

{% block body %}
	<div class="row justify-content-center">
		<div class="col-10 py-5">
		<div class="row">
			<div class="col-12 col-md-6 pb-3 pb-md-0">
			<h2>POSEZ-NOUS VOS QUESTIONS</h2>
			{{form_start(form)}}
			{{form_row(form.mail, {attr: {class: 'mb-3' }})}}
			{{form_row(form.name, {attr: {class: 'mb-3' }})}}
			{{form_row(form.message, {attr: {class: 'my-3 textMsg' }})}}
			{{form_end(form)}}
			{% for message in app.flashes('success') %}
            <div class="alert alert-success mt-3">
                {{ message }}
            </div>
        	{% endfor %}
			</div>
			<div class="col-12 col-md-6"><div style="width: 100%">
				<iframe width="100%" height="600" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?width=100%25&amp;height=600&amp;hl=fr&amp;q=801%20rue%20robert%20duverdrey,%2076510%20saint%20nicolas%20d'aliermont+(Chopenbois)&amp;t=&amp;z=14&amp;ie=UTF8&amp;iwloc=B&amp;output=embed"></iframe>
			</div></div>
		</div>
			
		</div>

	</div>


{% endblock %}
